<Page x:Class="WpfApp2.Record"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Record" Width="800" Height="700">

    <Grid Width="800" Height="700" RenderTransformOrigin="0.485,0.489" Margin="10,-10,-10,10">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="61" Margin="247,254,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="284" TextChanged="textBox_TextChanged" FontFamily="Ravie" FontSize="36" Foreground="#FFC52525"/>
        <Button x:Name="button" Content="Зберегти" HorizontalAlignment="Left" Margin="297,398,0,0" VerticalAlignment="Top" Width="190" Click="button_Click" Height="62" FontSize="24" Foreground="#FFC52525">
            <Button.Background>
                <ImageBrush ImageSource="фон.jpg"/>
            </Button.Background>
        </Button>
        <Label x:Name="label" Content="Введіть ім'я " HorizontalAlignment="Left" Margin="247,156,0,0" VerticalAlignment="Top" Width="284" FontSize="48" Foreground="#FFC52525" FontFamily="Ravie"/>

    </Grid>
</Page>
